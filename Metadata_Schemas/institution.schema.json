{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://example.com/institution.schema.json",
    "title": "Institution",
    "description": "Institution",
    "type": "object",
    "properties": {
        "name": {
            "type": "string",
            "description": "The name of the institution."
        },
        "description": {
            "type": "string",
            "description": "The description of the institution."
        },
        "address": {
            "type": "string",
            "description": "The address of the institution."
        },
        "required": ["name", "address"]
    }
}