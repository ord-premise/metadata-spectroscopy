{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://example.com/uhvcomponent.schema.json",
    "title": "UHV Component",
    "description": "UHV Component",
    "type": "object",
    "properties": {
        "name": {
            "type": "string",
            "description": "The name of the UHV component."
        },
        "uhvComponentType": {
            "type": "string",
            "enum": ["Pump", "Evaporator", "Analyser", "Gauge", "Ion/Photon stage", "Storage", "Gas panel", "Port/Valve", "Manipulator/Wobble stick", "Cryostat", "SPM", "Electronics", "Various"],
            "description": "The type of the UHV component."
        },
        "empaId": {
            "type": "string",
            "description": "Empa ID (given by Empa to expensive objects)."
        },
        "model": {
            "type": "string",
            "description": "The model of the UHV component."
        },
        "serialNumber": {
            "type": "string",
            "description": "The serial number of the UHV component."
        },
        "receiveDate": {
            "type": "string",
            "description": "Date when the instrument was received.",
            "format": "date"
        },
        "comments": {
            "type": "string",
            "description": "Comments to the instrument."
        },
        "manufacturer": {
            "$ref": "./manufacturer.schema.json"
        },
        "required": ["name", "uhvComponentType", "serialNumber", "empaId"]
    }
}