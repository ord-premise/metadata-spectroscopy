{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://example.com/grant.schema.json",
    "title": "Grant",
    "description": "A grant",
    "type": "object",
    "properties": {
        "name": {
            "type": "string",
            "description": "The name of the grant."
        },
        "funder": {
            "type": "string",
            "description": "The funding agency."
        },
        "startDate": {
            "type": "string",
            "description": "The starting date of the grant.",
            "format": "date"
        },
        "endDate": {
            "type": "string",
            "description": "The end date of the grant.",
            "format": "date"
        },
        "budget": {
            "type": "object",
            "description": "Amount of money.",
            "properties": {
                "value": {
                    "type": "number"
                },
                "currency": {
                    "type": "string"
                }
            }
        },
        "projectId": {
            "type": "string",
            "description": "The ID of the project."
        },
        "acknowledgementSentence": {
            "type": "string",
            "description": "Acknowledgements."
        },
        "comments": {
            "type": "string",
            "description": "Comments to the grant."
        },
        "required": ["name", "funder", "startDate", "endDate", "budget", "projectId"]
    }
}