{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://example.com/draft.schema.json",
    "title": "Draft",
    "description": "Draft",
    "type": "object",
    "properties": {
        "name": {
            "type": "string",
            "description": "The name of the draft."
        },
        "draftType": {
            "type": "string",
            "description": "The type of the draft.",
            "enum": ["preprint", "postprint"]
        },
        "comments": {
            "type": "string",
            "description": "Comments to the draft."
        },
        "results": {
            "type": "array",
            "items": {
                "$ref": "./result.schema.json",
            },
            "description": "Details about the results"
        },
        "required": ["name", "draftType"]
    }
}