{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://example.com/annealing.schema.json",
    "title": "Annealing",
    "description": "Annealing",
    "type": "object",
    "properties": {
        "name": {
            "type": "string",
            "description": "The name of the annealing."
        },
        "duration": {
            "type": "object",
            "description": "Duration of the annealing.",
            "properties": {
                "value": {
                    "type": "number"
                },
                "unit": {
                    "type": "string"
                }
            }
        },
        "pressure": {
            "type": "object",
            "description": "Pressure of the annealing.",
            "properties": {
                "value": {
                    "type": "number"
                },
                "unit": {
                    "type": "string"
                }
            }
        },
        "dischargeVoltage": {
            "type": "object",
            "description": "Discharge voltage of the annealing.",
            "properties": {
                "value": {
                    "type": "number"
                },
                "unit": {
                    "type": "string"
                }
            }
        },
        "voltage": {
            "type": "object",
            "description": "Voltage of the annealing.",
            "properties": {
                "value": {
                    "type": "number"
                },
                "unit": {
                    "type": "string"
                }
            }
        },
        "temperature": {
            "type": "object",
            "description": "Temperature of the annealing.",
            "properties": {
                "value": {
                    "type": "number"
                },
                "unit": {
                    "type": "string"
                }
            }
        },
        "angle": {
            "type": "object",
            "description": "Angle of the annealing.",
            "properties": {
                "value": {
                    "type": "number"
                },
                "unit": {
                    "type": "string"
                }
            }
        },
        "current": {
            "type": "object",
            "description": "Current of the annealing.",
            "properties": {
                "value": {
                    "type": "number"
                },
                "unit": {
                    "type": "string"
                }
            }
        },
        "comments": {
            "type": "string",
            "description": "Comments to the annealing."
        },
        "sputtering": {
            "$ref": "./sputtering.schema.json"
        },
        "deposition": {
            "$ref": "./deposition.schema.json"
        },
        "uhvComponent": {
            "$ref": "./uhvcomponent.schema.json"
        },
        "required": ["name", "duration"]
    }
}