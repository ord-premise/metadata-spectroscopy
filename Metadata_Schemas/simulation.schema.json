{
    "$schema": "https://json-schema.org/draft/2020-12/schema",
    "$id": "https://example.com/simulation.schema.json",
    "title": "Simulation",
    "description": "A simulation in the inventory",
    "type": "object",
    "properties": {
        "name": {
            "type": "string",
            "description": "The name of the simulation."
        },
        "description": {
            "type": "string",
            "description": "Description of the simulation."
        },
        "wfmsUUID": {
            "type": "string",
            "description": "Unique identifier of the simulation object in the WFMS."
        },
        "wfmsURL": {
            "type": "string",
            "description": "Link to WFMS."
        },
        "required": ["name", "wfmsUUID"]
    }
}